generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
}

model Parent {
  id        String   @id @default(uuid())
  userId    String   @unique
  email     String   @unique
  name      String
  role      String   @default("parent")
  wards     Ward[]
  payments  Payment[]
}

model Ward {
  id        String   @id @default(uuid())
  name      String
  parentId  String
  parent    Parent   @relation(fields: [parentId], references: [id])
  progress  Progress[]
}

model Term {
  id        String     @id @default(uuid())
  name      String     @unique
  startDate DateTime
  endDate   DateTime
  progress  Progress[]
}

model Progress {
  id       String   @id @default(uuid())
  wardId   String
  ward     Ward     @relation(fields: [wardId], references: [id])
  subject  String
  score    Int
  termId   String
  term     Term     @relation(fields: [termId], references: [id])
}

model Payment {
  id            String   @id @default(uuid())
  parentId      String
  parent        Parent   @relation(fields: [parentId], references: [id])
  amount        Float
  status        String
  receiptUrl    String?
  transactionId String?
  createdAt     DateTime @default(now())
}
